# Enterprise Uber Clone Backend Configuration
# Copy this to .env and configure with your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/uber_clone_enterprise?schema=public"

# Redis Configuration (Enterprise)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER_MODE=false

# Redis Cluster Configuration (for production scaling)
REDIS_NODE1=redis-node1:7000
REDIS_NODE2=redis-node2:7001
REDIS_NODE3=redis-node3:7002

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# Encryption Configuration
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Push Notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Application Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=api

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN=https://your-frontend-domain.com
HELMET_ENABLED=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# Business Configuration
PLATFORM_COMMISSION_RATE=0.15
MINIMUM_FARE=25
BASE_FARE=15
PER_KM_RATE=12
PER_MINUTE_RATE=2

# Driver Configuration
DRIVER_VERIFICATION_REQUIRED=true
BACKGROUND_CHECK_REQUIRED=true
INSURANCE_VERIFICATION_REQUIRED=true

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=https://your-frontend-domain.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Configuration
REQUEST_TIMEOUT=30000
CONNECTION_POOL_SIZE=20

# Enterprise Features
ENTERPRISE_MODE=true
MULTI_TENANT=false
AUDIT_LOGGING=true
COMPLIANCE_MODE=GDPR

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# Scaling Configuration
HORIZONTAL_SCALING=true
LOAD_BALANCER_ENABLED=true
AUTO_SCALING_ENABLED=true

# Development Configuration (for local development)
DEV_MODE=false
MOCK_SERVICES=false
DEBUG_ENABLED=false
